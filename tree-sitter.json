{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "ion",
      "camelcase": "Ion",
      "title": "Ion",
      "scope": "source.ion",
      "file-types": [
        "ion"
      ],
      "injection-regex": "^ion$",
      "class-name": "TreeSitterIon"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "Ion grammar for tree-sitter",
    "authors": [
      {
        "name": "nbellows",
        "email": "nabellows@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/nabellows/tree-sitter-ion"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}